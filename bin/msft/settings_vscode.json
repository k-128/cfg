{
    "telemetry.telemetryLevel": "off",

    // SECURITY
    // ------------------------------------------------------------------------
    "security.workspace.trust.enabled": true,
    "security.workspace.trust.banner": "never",
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.emptyWindow": false,
    "security.workspace.trust.untrustedFiles": "newWindow",

    // LANGUAGES
    // ------------------------------------------------------------------------
    "files.associations": {
        "*.json": "jsonc"
    },
    "[markdown]": {
        "editor.wordWrap": "off"
    },

    // THEMING
    // - Developer: Inspect Editor Tokens and Scopes
    // - Developer: Generate Color Theme From Current Settings
    // - Developer: Toggle Developer Tools
    // - code.visualstudio.com/api/references/theme-color
    // - github.com/microsoft/vscode/blob/main/extensions/theme-defaults/
    // ------------------------------------------------------------------------
    "window.commandCenter": false,
    "window.menuBarVisibility": "toggle",
    "breadcrumbs.enabled": false,
    "editor.wordWrap": "off",
    "editor.rulers": [80, 120],
    "editor.fontFamily": "Mononoki NFM",
    "editor.fontSize": 14,
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "editor.showFoldingControls": "always",
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "boundary",
    "editor.tabCompletion": "on",
    "editor.quickSuggestionsDelay": 500,
    "editor.scrollBeyondLastLine": true,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "markdown.preview.fontFamily": "Mononoki NFM",
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "default",
    "workbench.sideBar.location": "right",
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.colorCustomizations": {
        "[Default Dark Modern]": {
            "titleBar.activeBackground": "#0D1117",
            "titleBar.border": "#282828",
            "activityBar.background": "#0d1117",
            "activityBar.foreground": "#388E3C",
            "activityBar.activeBorder": "#f78166",
            "activityBarBadge.background": "#388E3C",
            "sideBarSectionHeader.background": "#0D1117",
            "sideBarTitle.background": "#0D1117",
            "sideBar.background": "#0D1117",
            "sideBar.border": "#282828",
            "editor.background": "#0D1117",
            "editor.selectionBackground": "#283b63",
            "editor.lineHighlightBackground": "#6e6e6e28",
            "editor.wordHighlightBackground": "#54777730",
            "editor.findMatchBackground": "#21b4b9",
            "editor.findMatchHighlightBackground": "#21b4b977",
            "editorBracketMatch.background": "#ffffff0c",
            "editorBracketMatch.border": "#ffffff0D",
            "editorCursor.foreground": "#ffffffbf",
            "list.activeSelectionBackground": "#6e768166",
            "list.activeSelectionForeground": "#e6edf3",
            "list.inactiveSelectionBackground": "#6e768166",
            "list.inactiveSelectionForeground": "#e6edf3",
            "statusBar.background": "#0D1117",
            "statusBar.border": "#282828",
            "statusBarItem.remoteBackground": "#0D1117",
            "statusBarItem.prominentBackground": "#0D1117",
            "statusBarItem.prominentHoverBackground": "#388e3c8f",
            "tab.border": "#282828",
            "tab.activeBackground": "#0d1117",
            "tab.activeBorder": "#0d1117",
            "tab.activeBorderTop": "#0a5203",
            "tab.activeForeground": "#e6edf3",
            "tab.hoverBackground": "#0d1117",
            "tab.inactiveBackground": "#010409",
            "tab.inactiveForeground": "#7d8590",
            "tab.unfocusedActiveBorder": "#0d1117",
            "tab.unfocusedActiveBorderTop": "#30363d",
            "tab.unfocusedHoverBackground": "#6e76811a",
            "checkbox.background": "#0d1117",
            "debugToolBar.background": "#0d1117",
            "dropdown.background": "#0d1117",
            "dropdown.listBackground": "#0d1117",
            "editorWidget.background": "#0d1117",
            "notificationCenterHeader.background": "#0d1117",
            "notifications.background": "#0d1117",
            "quickInput.background": "#0d1117",
            "editorGroupHeader.tabsBackground": "#0d1117",
            "panel.background": "#0d1117",
            "menu.background": "#181818"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Default Dark Modern]": {
            "comments": "#8B949E",
            "textMateRules": [
                {
                    "scope": "support.type.property-name.json",
                    "settings": {
                        "foreground": "#43A047"
                    }
                }
            ]
        }
    },

    // EXTENSIONS
    // ------------------------------------------------------------------------
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": true,
    "extensions.ignoreRecommendations": true
}
