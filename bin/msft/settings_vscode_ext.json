        // "ms-toolsai.jupyter-renderers":         { "supported": "limited" },
        // "ms-python.vscode-pylance":             { "supported": "limited" },
        // "ms-python.python":                     { "supported": "limited" },
        // "rust-lang.rust-analyzer":              { "supported": "limited" },
        //  "sainnhe.sonokai"                      { "supported": "limited" },
        // "zxh404.vscode-proto3":                 { "supported": "limited" }
    },

    "python.defaultInterpreterPath": "python",
    "python.venvFolders": ["venv"],
    "python.venvPath": ".",

    "jupyter.askForKernelRestart": true,
    "jupyter.decorateCells": true,
    "notebook.cellFocusIndicator": "gutter",
    "notebook.showCellStatusBar": "visible",
    "notebook.cellToolbarLocation": { "default": "right" },
    "notebook.cellToolbarVisibility": "hover",
    "notebook.outline.showCodeCells": true,
    "notebook.compactView": true,
    "notebook.insertToolbarLocation": "hidden",
    "notebook.lineNumbers": "on",
    "notebook.editorOptionsCustomizations": {},
    "notebook.dragAndDropEnabled": true,
    "notebook.globalToolbar": false,

    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "C_Cpp.default.compilerPath": "g++",
    "C_Cpp.default.includePath": [
        "${default}",
        "${VCPKG_ROOT}/installed/x64-mingw-static/include",
        "${VULKAN_SDK}/include"
    ],
    "cmake.cmakePath": "",
    "cmake.configureOnOpen": false,
    "cmake.configureOnEdit": false,
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "${VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    "cmake.generator": "MinGW Makefiles",

    "arduino.path": "",
    "arduino.commandPath": "arduino_debug.exe",
    "arduino.logLevel": "info",
    "arduino.enableUSBDetection": false,
    "arduino.disableTestingOpen": true,
    "arduino.skipHeaderProvider": true,
    "arduino.additionalUrls": [
        "http://arduino.esp8266.com/stable/package_esp8266com_index.json"
    ],
    "arduino.defaultBaudRate": 115200
}
